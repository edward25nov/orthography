<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/previa"
        android:id="@+id/imgleccion"
        android:layout_weight="0.00"
        android:scaleType="fitStart"
        android:adjustViewBounds="false"
        tools:ignore="ContentDescription,InefficientWeight" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtleccion"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:layout_weight="0.00"
            tools:ignore="HardcodedText,InefficientWeight,NestedWeights" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/ratingBarleccion"
            android:numStars="5"
            android:stepSize="0.01"
            android:rating="2"
            android:minHeight="57dp"
            android:layout_centerHorizontal="true"
            tools:ignore="ObsoleteLayoutParam,RtlSymmetry"
            style="@style/Widget.AppCompat.RatingBar.Indicator" />
    </LinearLayout>

</LinearLayout>
