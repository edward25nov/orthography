<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registrar1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.edward.orthography.Registrar1"
    android:background="@drawable/profesor">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        tools:ignore="NotSibling,UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/Registrar1_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtregistrar1"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded"
            android:gravity="right" />

        <TextView
            android:text="@string/Registrar11_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtregistrar1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:id="@+id/txtregistrar11"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:ignore="InvalidId,ObsoleteLayoutParam,RtlHardcoded"
            android:gravity="right" />

        <TextView
            android:text="@string/contenidoregistrar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtregistrar11"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/txtreg1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded"
            android:gravity="right" />

        <TextView
            android:text="@string/contenidoregistrar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtreg1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/txtreg2"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded"
            android:gravity="right" />

        <TextView
            android:text="@string/contenidoregistrar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtreg2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/txtreg3"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded"
            android:gravity="right" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:id="@+id/espaciador"
            android:layout_weight="0.38"
            tools:ignore="InefficientWeight"></LinearLayout>

        <Button
            android:text="@string/crearperfil"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnregistrar1"
            android:background="@drawable/bk_boton_juego"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="125dp"
            android:layout_marginStart="125dp"
            tools:ignore="ObsoleteLayoutParam" />

    </LinearLayout>

</RelativeLayout>
