<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.5">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button1"

                    android:text="Lección 1"
                    android:textSize="18sp"
                    android:gravity="center|bottom"
                    android:paddingBottom="10dp"
                    tools:ignore="HardcodedText"
                    android:background="@drawable/bk_boton_juego"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/box1"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button2"

                    android:text="Lección 2"
                    android:textSize="18sp"
                    android:paddingBottom="10dp"
                    android:gravity="bottom|center"
                    tools:ignore="HardcodedText"
                    android:background="@drawable/bk_boton_plano"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/box2"
                    android:layout_centerInParent="true"
                    android:contentDescription=""
                    tools:ignore="ContentDescription"
                    android:scaleType="fitXY" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.5">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button3"

                    android:text="Lección 3"
                    android:textSize="18sp"
                    android:gravity="center|bottom"
                    android:paddingBottom="10dp"
                    tools:ignore="HardcodedText"
                    android:background="@drawable/bk_boton_plano"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/box3"
                    android:layout_centerInParent="true"
                    tools:ignore="ContentDescription"
                    android:scaleType="fitXY" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button4"

                    android:text="Lección 4"
                    android:textSize="18sp"
                    android:gravity="center|bottom"
                    android:paddingBottom="10dp"
                    tools:ignore="HardcodedText"
                    android:background="@drawable/bk_boton_juego"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/box4"
                    android:layout_centerInParent="true"
                    tools:ignore="ContentDescription"
                    android:scaleType="fitXY" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.5">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button5"

                    android:text="Lección 5"
                    android:textSize="18sp"
                    android:gravity="center|bottom"
                    android:paddingBottom="10dp"
                    tools:ignore="HardcodedText"
                    android:background="@drawable/bk_boton_juego"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/box5"
                    android:layout_centerInParent="true"
                    tools:ignore="ContentDescription"
                    android:scaleType="fitXY" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button6"

                    android:text="@string/mi_progreso"
                    android:textSize="18sp"
                    android:gravity="center|bottom"
                    android:paddingBottom="10dp"
                    tools:ignore="HardcodedText"
                    android:background="@drawable/bk_boton_plano"
                    android:textStyle="normal|bold"
                    android:textAllCaps="false" />
                <ImageView
                    android:src="@drawable/progreso"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>